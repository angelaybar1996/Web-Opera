@model IEnumerable<OperaWebSite.Models.Opera>//agregar esto para que me devuelva la lista

@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>

    @Html.ActionLink("Nuevo","Create","Opera")
    <table>
        <tr>
            @*titulos de los datos*@
            <th>@Html.DisplayNameFor(model=>model.Title)</th>
            <th>@Html.DisplayNameFor(model=>model.Composer)</th>
            <th>@Html.DisplayNameFor(model=>model.Year)</th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
                <tr>
                @*datos agregados*@
                    <td>
                    @Html.DisplayFor(modelItem=>item.Title)
                    </td>
                    <td>
                    @Html.DisplayFor(modelItem=>item.Composer)
                    </td> 
                    <td>
                    @Html.DisplayFor(modelItem=>item.Year)
                    </td> 
                    <td>
                    @Html.ActionLink("Detalle","Details","Opera",new{id=item.Id })
                    @Html.ActionLink("Eliminar","Delete","Opera",new{id=item.Id })
                    </td>
                </tr>

        }
    </table>

</body>
</html>
